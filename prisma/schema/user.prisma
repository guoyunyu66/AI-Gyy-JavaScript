model User {
  id           String   @id @default(cuid()) // 主键，使用 CUID
  auth_user_id String   @unique // 关联 Supabase Auth User ID，可选，唯一
  email        String   @unique // 邮箱，唯一
  name         String? // 用户名，可选
  avatar_url   String? // 头像 URL，可选
  phone_number String?  @unique // 电话号码，可选，唯一
  created_at   DateTime @default(now()) // 创建时间
  updated_at   DateTime @updatedAt // 更新时间

  conversations Conversation[] // 用户发起的对话
  messages      Message[] // 用户发送的消息

  // 如果需要，可以在这里添加与其他表的关系，例如：
  // conversations Conversation[] // 用户发起的对话
  // messages      Message[]      // 用户发送的消息
}
